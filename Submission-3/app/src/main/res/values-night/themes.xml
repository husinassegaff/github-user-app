    <style name="Theme.GithubUserApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white_secondary</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/black_secondary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black_primary</item>
        <item name="colorSecondaryVariant">@color/black_secondary</item>
        <item name="colorOnSecondary">@color/white_primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/white_primary</item>
    </style>
</resources>